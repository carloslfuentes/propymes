.wrapper
  .grid_8.top
    .grid_3.first.top
      .panel
        .clearfix
          = f.label :name
          = f.text_field :name
        .clearfix
          =f.label :user_id
          =f.collection_select :user_id, User.is_active.sort_by(&:login), :id, :name, {}
        .clearfix.al
          = f.label :start_date
          = f.text_field :start_date, :id => "start_date", :style => "width:100px;", :class => "start_date", :readonly => true
        .clearfix.al
          = f.label :end_date
          = f.text_field :end_date, :id => "end_date", :style => "width:100px;", :class => "end_date", :readonly => true
        .clearfix
          ="Description"
          %br
          = f.text_area :description, :style => "width:200px;height:100px"
        .clearfix
          %button.button.button-blue{:type => "submit"}
            = t :save
:javascript
  $(document).ready(function() {
    var myCalendar;
    myCalendar = new dhtmlXCalendarObject(["start_date","end_date"]);
    //myCalendar.setDateFormat("#{t('date.formats.dhtmlx')}");
    $(".dhtmlxcalendar_container").css('z-index', '9999') ;
  });