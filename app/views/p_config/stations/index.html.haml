.wrapper
  .grid_8.first.top
    .grid_6.first
      %h3
        = "Linea"
      %table.style.full
        %thead
          %tr
            %th
              = "name"
            %th
              = "asignacion"
            %th
              = "ip"
        
        %tbody
          - @stations_lineal.each do |lineal|
            %tr  
              %td.ac
                = link_to lineal.name, edit_p_config_station_path(lineal.id)
              %td.ac
                = link_to "Asignacion", choose_products_p_config_station_path(lineal.id)
              %td.ac
                = lineal.ip_station
        
    .grid_6.first
      %h3
        = "Batch"
      %table.style.full
        %thead
          %tr
            %th
              = "name"
            %th
              = "asignacion"
            %th
              = "ip"
        
        %tbody
          - @stations_batch.each do |lineal|
            %tr  
              %td.ac
                = link_to lineal.name, edit_p_config_station_path(lineal.id)
              %td.ac
                = link_to "Asignacion", choose_products_p_config_station_path(lineal.id)
              %td.ac
                = lineal.ip_station
                
    .grid_2
      .panel.padding3
        %a.button.background_orange.white{:href => new_p_config_station_path}
          = t :new
        %a.button.background_gray.gray{:href => configurations_path}
          = t :configuration