.wrapper.top
  .grid_8
    .grid_4.first.panel.padding1.background_gray_clear
      %h3
        = PConfig::ProductType.model_name.human
      .form
        .clearfix
          = f.label :name
          = f.text_field :name, :required => true
        .clearfix
          = f.label :type_of_production
          = f.select :type_of_production, options_for_select([["Lineal", "lineal"], ["Batch", "batch"]], @product_type.type_of_production), {:include_blank => true, :required => true} #:type_of_production
        .clearfix
          = f.label :description
          = f.text_area :description
        .clearfix
          = f.label :is_enabled
          = f.check_box :is_enabled
        %hr/
        .ar
          .clearfix.top
            %button.button.background_orange.white{:type => "submit"}
              = t :save
            %button.button.background_gray.gray{:type => "reset"}
              = t :clear
            %a.button.background_gray.gray{:href => p_config_product_types_path}
              = t :cancel
