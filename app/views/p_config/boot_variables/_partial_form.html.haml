.wrapper.top
  .grid_8
    .grid_4.first.panel.padding1.background_gray_clear
      %h3
        = t :new_boot_variable
      .form
        .clearfix
          = f.label :name
          = f.text_field :name, :required => true
        .clearfix
          = f.label :product_id
          = f.select :product_id, PConfig::Product.all.map{|product| [product.name, product.id]}, {:include_blank => true, :required => true}
        .clearfix
          = f.label :station_id
          = f.select :station_id, PConfig::Station.all.map{|product| [product.name, product.id]}, {:include_blank => true, :required => true}
        .clearfix
          = f.label :description
          = f.text_area :description, :required => true
        .clearfix
          = f.label :time
          = f.text_field :time, :type => :time, :required => true
        .clearfix
          = f.label :is_enabled
          = f.check_box :is_enabled
        %hr/
        .ar
          .clearfix.top
            %button.button.background_orange.white{:type => "submit"}
              = t :save
            %button.button.background_gray.gray{:type => "reset"}
              = t :clear
            %a.button.background_gray.gray{:href => p_config_boot_variables_path}
              = t :cancel

