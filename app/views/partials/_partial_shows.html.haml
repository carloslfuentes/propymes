.wrapper.top
  / Main Section
  -links = {} if links.blank? 
  .grid_6.first
    .grid_3.first
      %h3
        = t("activerecord.models.#{request.path.sub('/','.').sub(/\/[0-9]+/,'').singularize}.one")
      .panel.padding1.background_gray_clear
        %table.no-style.full
          .form
            %tbody
              - fild_names.each do |fild_name|
                %tr
                  %td
                    = t("activerecord.attributes.#{request.path.sub('/','.').sub(/\/[0-9]+/,'').singularize}."+fild_name.to_s)
                  %td.ar
                    = object[fild_name.to_sym]
  %h3
    &nbsp;
  .grid_2
    .panel.padding3
      -return_p = links.present? ? links[:return] : request.path.sub(/\/[0-9]+/,"")
      %a.button.background_gray.gray{:href => return_p}
        = t :return
      %a.button.background_orange.white{:href => request.path+"/edit"}
        = t :edit
