.wrapper.top
  .grid_8
    .grid_6.first
      .panel.padding1
        
    .grid_2
      .panel.padding1.background_gray_clear.gray
        %h3
          = PConfig::WorkTime.model_name.human(:count => :other)
        %table.full.not-style
          %tr
            %td
              = "Tiempo Laboral"
            %td.bold.ar
              = (PConfig::WorkTime.total_hours / 3600).round(2).to_s.sub(".",":")
          %tr
            %td
              = "Tiempo Disponible"
            %td.ar
              = "00:00"
          %tr
            %td
              = "Tiempo Efectivo"
            %td.ar
              = "00:00"

//Validate Working Day
#validate_status.widget.panel.padding1.background_gray_clear
  .content
    .form
      .clearfix
        = label_tag :product_id
        = select_tag :product_id, options_for_select(PConfig::Product.for_station(request.ip).map{|prod| [prod.name, prod.id]})

:javascript
  $(document).ready(function() {
    
    //Validate Working Day
    $("#validate_status").validateStatus("#{@working_day.id}");
  });

